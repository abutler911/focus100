<div class="container mt-5">
  <h1 class="text-center">Edit Log</h1>
  <form action="/dailylog/<%= log._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="date">Date:</label>
      <input
        type="date"
        id="date"
        name="date"
        class="form-control"
        value="<%= log.date.toISOString().split('T')[0] %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="cardio">Cardio (min):</label>
      <input
        type="number"
        id="cardio"
        name="cardio"
        class="form-control"
        value="<%= log.cardio %>"
        required
      />
    </div>
    <div class="form-group">
      <label for="pushups">Pushups:</label>
      <input
        type="number"
        id="pushups"
        name="pushups"
        class="form-control"
        value="<%= log.pushups %>"
        required
      />
    </div>
    <div class="form-group">
      <label for="situps">Situps:</label>
      <input
        type="number"
        id="situps"
        name="situps"
        class="form-control"
        value="<%= log.situps %>"
        required
      />
    </div>
    <div class="form-group">
      <label for="savings">Savings ($):</label>
      <input
        type="number"
        id="savings"
        name="savings"
        class="form-control"
        value="<%= log.savings %>"
        required
      />
    </div>
    <div class="form-group form-check">
      <input type="checkbox" id="noAlcohol" name="noAlcohol"
      class="form-check-input" <%= log.noAlcohol ? 'checked' : '' %>>
      <label for="noAlcohol" class="form-check-label">No Alcohol</label>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</div>
