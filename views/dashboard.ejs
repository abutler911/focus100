<div class="container mt-5">
  <h1>Welcome, <%= user.firstname %>!</h1>
  <% if (typeof message !== "undefined") { %>
  <div class="alert alert-info mt-4">
    <p><%= message %></p>
  </div>
  <% } else { %>
  <p class="lead">Here's a summary of your progress:</p>

  <!-- Totals Section -->
  <div class="row my-4">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Totals</h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Cardio: <strong><%= totals.cardio %> minutes</strong>
            </li>
            <li class="list-group-item">
              Pushups: <strong><%= totals.pushups %></strong>
            </li>
            <li class="list-group-item">
              Situps: <strong><%= totals.situps %></strong>
            </li>
            <li class="list-group-item">
              Savings: <strong>$<%= totals.savings %></strong>
            </li>
            <li class="list-group-item">
              No Alcohol Days: <strong><%= totals.noAlcohol %></strong>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Quick Actions Section -->
  <div class="my-4">
    <a href="/dailylog/new" class="btn btn-primary">Add New Log</a>
    <a href="/dailylog" class="btn btn-secondary">View All Logs</a>
  </div>

  <!-- Logout -->
  <div class="mt-4">
    <a href="/api/logout" class="btn btn-danger">Logout</a>
  </div>
</div>
