<div class="container mt-5">
  <!-- Welcome Section -->
  <div class="text-center mb-4">
    <h1 class="mb-2">Welcome, <%= user.firstname %>!</h1>
    <p class="lead">Today's Date: <strong><%= currentDate %></strong></p>
    <p>
      <% if (isPast) { %> Days Since January 1, 2025:
      <strong><%= days %></strong> <% } else { %> Days Until January 1, 2025:
      <strong><%= days %></strong>
      <% } %>
    </p>
  </div>

  <!-- Quick Actions Section -->
  <div class="container mt-5">
    <div class="button-group p-3 mb-4">
      <div class="row justify-content-center">
        <div class="col-6 col-md-3 mb-2">
          <a href="/dailylog/new" class="btn w-100 custom-btn">
            <i class="bi bi-plus-circle"></i> New Log
          </a>
        </div>
        <div class="col-6 col-md-3 mb-2">
          <a href="/dailylog" class="btn w-100 custom-btn">
            <i class="bi bi-journal-text"></i> Logs
          </a>
        </div>
        <div class="col-6 col-md-3 mb-2">
          <a href="/graphs" class="btn w-100 custom-btn">
            <i class="bi bi-bar-chart"></i> Graphs
          </a>
        </div>
        <div class="col-6 col-md-3 mb-2">
          <a href="/forum/main" class="btn w-100 custom-btn">
            <i class="bi bi-chat-dots"></i> Forum
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Goals Section -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="text-center mb-4">Your 100-Day Goals</h2>
      <div class="row">
        <div class="col-md-6">
          <p>Cardio: <%= totals.cardio %> / <%= totalGoals.cardio %> minutes</p>
          <div class="progress mb-3">
            <div
              class="progress-bar"
              role="progressbar"
              style="width: <%= progress.cardio %>%"
              aria-valuenow="<%= progress.cardio %>"
              aria-valuemin="0"
              aria-valuemax="100"
            >
              <%= progress.cardio.toFixed(0) %>%
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <p>Pushups: <%= totals.pushups %> / <%= totalGoals.pushups %></p>
          <div class="progress mb-3">
            <div
              class="progress-bar bg-success"
              role="progressbar"
              style="width: <%= progress.pushups %>%"
              aria-valuenow="<%= progress.pushups %>"
              aria-valuemin="0"
              aria-valuemax="100"
            >
              <%= progress.pushups.toFixed(0) %>%
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <p>Situps: <%= totals.situps %> / <%= totalGoals.situps %></p>
          <div class="progress mb-3">
            <div
              class="progress-bar bg-danger"
              role="progressbar"
              style="width: <%= progress.situps %>%"
              aria-valuenow="<%= progress.situps %>"
              aria-valuemin="0"
              aria-valuemax="100"
            >
              <%= progress.situps.toFixed(0) %>%
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <p>Savings: $<%= totals.savings %> / $<%= totalGoals.savings %></p>
          <div class="progress mb-3">
            <div
              class="progress-bar bg-warning"
              role="progressbar"
              style="width: <%= progress.savings %>%"
              aria-valuenow="<%= progress.savings %>"
              aria-valuemin="0"
              aria-valuemax="100"
            >
              <%= progress.savings.toFixed(0) %>%
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Summary Cards Section -->
  <div class="row text-center">
    <div class="col-6 col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Cardio</h5>
          <hr />
          <p class="display-6"><strong><%= totals.cardio %> min</strong></p>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Pushups</h5>
          <hr />
          <p class="display-6"><strong><%= totals.pushups %></strong></p>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Situps</h5>
          <hr />
          <p class="display-6"><strong><%= totals.situps %></strong></p>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 mb-4">
      <a href="/savings" class="text-decoration-none">
        <div class="card shadow-sm savings-card">
          <div class="card-body text-center">
            <h5 class="card-title">Savings</h5>
            <hr />
            <p class="display-6"><strong>$<%= totals.savings %></strong></p>
            <p class="text-muted small">Click to enter the Savings page</p>
          </div>
        </div>
      </a>
    </div>

    <div class="col-6 col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">No Alcohol Days</h5>
          <hr />
          <p class="display-6"><strong><%= totals.noAlcohol %></strong></p>
        </div>
      </div>
    </div>
  </div>
</div>
