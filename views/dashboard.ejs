<div class="container mt-5">
  <h1 class="text-center mb-4">Welcome, <%= user.firstname %>!</h1>

  <div class="text-center mb-4">
    <p class="lead">Today's Date: <strong><%= currentDate %></strong></p>
    <p class="lead">
      <% if (isPast) { %> Days Since January 1, 2025:
      <strong><%= days %></strong> <% } else { %> Days Until January 1, 2025:
      <strong><%= days %></strong>
      <% } %>
    </p>
  </div>

  <% if (typeof message !== "undefined") { %>
  <div class="alert alert-info text-center">
    <p><%= message %></p>
  </div>
  <% } else { %>
  <!-- Totals Section -->
  <div class="row text-center">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Cardio</h5>
          <hr />
          <p class="display-6"><strong><%= totals.cardio %> min</strong></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Pushups</h5>
          <hr />
          <p class="display-6"><strong><%= totals.pushups %></strong></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Situps</h5>
          <hr />
          <p class="display-6"><strong><%= totals.situps %></strong></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row text-center mt-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Savings</h5>
          <hr />
          <p class="display-6"><strong>$<%= totals.savings %></strong></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">No Alcohol Days</h5>
          <hr />
          <p class="display-6"><strong><%= totals.noAlcohol %></strong></p>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Quick Actions Section -->
  <div class="text-center mt-5">
    <a href="/dailylog/new" class="btn custom-btn mx-2">Add New Log</a>
    <a href="/dailylog" class="btn custom-btn mx-2">View All Logs</a>
    <a href="/graphs" class="btn custom-btn mx-2">View Graphs</a>
    <a href="/messageboard" class="btn custom-btn mx-2">Message Board</a>
  </div>

  <!-- Logout -->
  <div class="text-center mt-4">
    <a href="/api/logout" class="btn logout-btn">Logout</a>
  </div>
</div>
