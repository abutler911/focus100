<div class="container my-5">
  <h1 class="text-center mb-4">Community Forum</h1>

  <!-- Display Posts List -->
  <section class="posts-list">
    <h2 class="h4 border-bottom pb-2 mb-4">Recent Discussions</h2>
    <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <!-- Post Title -->
        <h3 class="h5">
          <a
            href="/forum/posts/<%= post._id %>"
            class="text-primary text-decoration-none"
          >
            <%= post.title %>
          </a>
        </h3>
        <!-- Post Metadata -->
        <p class="text-muted small mb-0">
          Posted by
          <strong class="text-primary"><%= post.author.username %></strong> |
          <%= new Date(post.createdAt).toLocaleString() %>
        </p>
      </div>
    </div>
    <% }); %> <% } else { %>
    <!-- No Posts Found -->
    <p class="text-muted text-center">
      No discussions yet. Be the first to
      <a href="#create-post" class="text-primary">start one</a>!
    </p>
    <% } %>
  </section>
</div>
