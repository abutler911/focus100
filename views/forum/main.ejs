<div class="forum-container container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="forum-title">Message Board</h1>
  </div>

  <!-- Display Posts List -->
  <section class="forum-posts">
    <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
    <div class="forum-card card mb-3">
      <div class="d-flex align-items-start">
        <!-- Like/Dislike Section -->
        <div class="forum-votes text-center px-3 py-2">
          <button class="vote-btn upvote">
            <i class="fas fa-thumbs-up"></i>
          </button>
          <div class="votes-count"><%= post.votes || 0 %></div>
          <button class="vote-btn downvote">
            <i class="fas fa-thumbs-down"></i>
          </button>
        </div>

        <!-- Post Content -->
        <div class="forum-content flex-grow-1 px-3 py-2">
          <h3 class="forum-post-title">
            <a href="/forum/posts/<%= post._id %>" class="forum-post-link">
              <%= post.title %>
            </a>
          </h3>
          <p class="forum-post-meta">
            Posted by
            <span class="forum-author"><%= post.author.username %></span> • <%=
            new Date(post.createdAt).toLocaleDateString() %>
          </p>
          <p class="forum-post-summary">
            <%= post.summary || "No description provided." %>
          </p>
          <div class="forum-post-info">
            <span class="comments-count"
              ><%= post.comments.length %> Comments</span
            >
            •
            <span class="likes-count"><%= post.likes || 0 %> Likes</span>
          </div>
        </div>
      </div>
    </div>
    <% }); %> <% } else { %>
    <p class="forum-empty text-muted text-center">
      No discussions yet. Be the first to
      <a href="/forum/new" class="forum-create-link">start one</a>!
    </p>
    <% } %>
  </section>
</div>
