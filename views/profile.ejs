<div class="container mt-5">
  <h1 class="text-center">Your Profile</h1>
  <form action="/profile/goals" method="POST">
    <h2>Set Your 100-Day Goals</h2>
    <div class="form-group">
      <label for="cardioGoal">Cardio Goal (minutes):</label>
      <input
        type="number"
        id="cardioGoal"
        name="cardioGoal"
        class="form-control"
        value="<%= user.goals.cardio %>"
      />
    </div>
    <div class="form-group">
      <label for="pushupsGoal">Pushups Goal:</label>
      <input
        type="number"
        id="pushupsGoal"
        name="pushupsGoal"
        class="form-control"
        value="<%= user.goals.pushups %>"
      />
    </div>
    <div class="form-group">
      <label for="situpsGoal">Situps Goal:</label>
      <input
        type="number"
        id="situpsGoal"
        name="situpsGoal"
        class="form-control"
        value="<%= user.goals.situps %>"
      />
    </div>
    <div class="form-group">
      <label for="savingsGoal">Savings Goal ($):</label>
      <input
        type="number"
        id="savingsGoal"
        name="savingsGoal"
        class="form-control"
        value="<%= user.goals.savings %>"
      />
    </div>
    <div class="form-group form-check">
      <input type="checkbox" id="noAlcoholGoal" name="noAlcoholGoal"
      class="form-check-input" <%= user.goals.noAlcohol ? "checked" : "" %>>
      <label for="noAlcoholGoal" class="form-check-label"
        >No Alcohol for 100 Days</label
      >
    </div>
    <button type="submit" class="btn btn-primary">Save Goals</button>
  </form>
</div>
