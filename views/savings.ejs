<div class="container mt-5">
  <header class="text-center">
    <h1>100 Days Saving Challenge</h1>
    <p id="total-saved-display" class="lead">
      Total Saved: $<%= totalSaved %> out of $5050
    </p>

    <div class="progress" id="progress-bar-container">
      <div
        id="progress-bar"
        class="progress-bar"
        role="progressbar"
        style="width: 0%"
        aria-valuemin="0"
        aria-valuemax="100"
        aria-valuenow="<%=
        ((savingsEntries.length / 100) * 100).toFixed(0) %>"
      >
        <span id="progress-percentage">
          <%= ((savingsEntries.length / 100) * 100).toFixed(0) %>%
        </span>
      </div>
      <script>
        const progressBarWidth =
          "<%= ((savingsEntries.length / 100) * 100).toFixed(2) %>";
      </script>

      <script>
        document.getElementById(
          "progress-bar"
        ).style.width = `${progressBarWidth}%`;
      </script>
    </div>
  </header>

  <main>
    <section id="saving-challenge">
      <div class="days-container">
        <% for (let i = 1; i <= 100; i++) { const savedEntry =
        savingsEntries.find(entry => entry.day === i); %>
        <button
          class="day btn <%= savedEntry ? 'btn-success' : 'btn-light' %>"
          data-day="<%= i %>"
        >
          <% if (savedEntry) { %> $<%= savedEntry.amount %>
          <i class="fas fa-star" style="color: gold"></i>
          <% } else { %> $<%= i %> <% } %>
        </button>
        <% } %>
      </div>
    </section>
  </main>

  <!-- Reset Button -->
  <button
    id="reset-button"
    class="btn btn-danger mt-3"
    data-bs-toggle="modal"
    data-bs-target="#resetModal"
  >
    Reset
  </button>

  <!-- Bootstrap Modal -->
  <div
    class="modal fade"
    id="resetModal"
    tabindex="-1"
    aria-labelledby="resetModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="resetModalLabel">Confirm Reset</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          Are you sure you want to reset all your savings? This action cannot be
          undone.
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button
            id="confirm-reset-button"
            type="button"
            class="btn btn-danger"
          >
            Confirm Reset
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
